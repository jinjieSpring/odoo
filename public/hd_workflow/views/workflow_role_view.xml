<odoo>
    <data>
        <record model="ir.ui.view" id="HdWorkflowRoleTree">
            <field name="model">hd.workflow.role</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="users_ids"/>
                    <field name="remarks"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="HdWorkflowRoleForm">
            <field name="model">hd.workflow.role</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="remarks"/>
                        </group>
                        <notebook>
                            <page string="人员">
                                <field name="users_ids">
                                     <tree>
                                         <field name="name"></field>
                                     </tree>
                                </field>
                            </page>
<!--                            <page string="Python Code">-->
<!--                                <field name="code_function" widget="ace" options="{'mode': 'python'}"/>-->
<!--                            </page>-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hd_workflow_role">
            <field name="name">工作流角色</field>
            <field name="res_model">hd.workflow.role</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>