<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="IrProcessTree" model="ir.ui.view">
            <field name="model">ir.process</field>
            <field name="arch" type="xml">
                <tree string="列表">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="depend_state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="IrProcessForm" model="ir.ui.view">
            <field name="model">ir.process</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name='button_state' string='生成明细' type='object' class='oe_highlight'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="model_id" required="1" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                <field name="depend_state"/>
                            </group>
                            <group>
                                <field name="name" required='1'/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                        <field name="process_ids" mode="tree,form">
                            <form>
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="id" invisible="1"/>
                                            <field name="process_id" invisible="1"/>
                                            <field name="sequence" invisible="1"/>
                                            <field name="name"/>
                                            <field name="type" options="{'horizontal': true}" widget="radio"/>
                                            <field name="domain" widget="ace" options="{'mode': 'python'}" invisible="1"/>
                                            <field name="users_ids" widget="many2many_tags" attrs="{'invisible': [('type', 'in', ('权限组','自定义','角色组','节点审核人'))]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                            <field name="groups_ids" widget="many2many_tags" attrs="{'invisible': [('type', 'in', ('固定审核人','自定义','角色组','节点审核人'))]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                            <field name="workflow_role_ids" widget="many2many_tags" attrs="{'invisible': [('type', 'in', ('固定审核人','权限组','自定义','节点审核人'))]}" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                            <field name="before_ids" widget="many2many_tags"
                                                   attrs="{'invisible': [('type', 'in', ('权限组','固定审核人','自定义','角色组'))]}"
                                                   options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                            <field name="button_name" widget="ace" options="{'mode': 'python'}" placeholder="Enter Python code here. Help about Python expression is available in the help tab of this document." invisible="1" />
                                            <field name="approve_type" options="{'horizontal': true}" widget="radio"/>
                                            <field name="is_stop"/>
                                            <field name="is_fixed"/>
                                            <field name="is_jump"/>
                                            <field name="jump_record_show"/>
                                            <field name="jump_code" widget="ace" options="{'mode': 'python'}" placeholder="Enter Python code here. Help about Python expression is available in the help tab of this document." invisible="1" />
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                            <tree>
                                <field name="id" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="approve_type"/>
                                <field name="type"/>
                                <field name="is_stop"/>
                                <field name="is_fixed"/>
                                <field name="is_jump"/>
                                <field name="jump_record_show"/>
                                <field name="can_back"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="IrProcessSearch" model="ir.ui.view">
            <field name="model">ir.process</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <filter string="有效" name="valid" domain="[('active', '=', True)]"/>
                    <filter string="无效" name="unvalid" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_ir_process" model="ir.actions.act_window">
            <field name="name">发启流程</field>
            <field name="res_model">ir.process</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_valid': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    创建流程。
                </p>
            </field>
        </record>
    </data>
</odoo>