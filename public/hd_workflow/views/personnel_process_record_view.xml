<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="HdPersonnelProcessRecordForm">
            <field name="model">hd.personnel.process.record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="model_id"/>
                                <field name="res_id"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="res_model"/>
                                <field name="valid" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="HdPersonnelProcessRecordTree">
            <field name="model">hd.personnel.process.record</field>
            <field name="arch" type="xml">
                <tree default_order="res_id desc,id desc">
                    <field name="name" />
                    <field name="user_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="model_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                    <field name="res_id" />
                    <field name="valid" />
                </tree>
            </field>
        </record>
        <record id="HdPersonnelProcessRecordSearch" model="ir.ui.view">
            <field name="model">hd.personnel.process.record</field>
            <field name="arch" type="xml">
                <search string="查询">
                    <filter string="有效" name="valid" domain="[('valid', '=', True)]"/>
                    <group expand="0" string="分组">
                        <filter string="模块" name="group_model_id" context="{'group_by':'model_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_hd_personnel_process_record" model="ir.actions.act_window">
            <field name="name">待办记录</field>
            <field name="res_model">hd.personnel.process.record</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_model_id':1}</field>
        </record>
    </data>
</odoo>