<odoo>
    <data>
        <record model="ir.ui.view" id="RepairApplicationTree">
            <field name="name">RepairApplication tree</field>
            <field name="model">repair.application</field>
            <field name="arch" type="xml">
                <tree default_order=" id desc">
                    <field name="name"/>
                    <field name="apply_user"/>
                    <field name="user_dept"/>
                    <field name="user_phone"/>
<!--                    <field name="format_year_test_date"/>-->
<!--                    <field name="expected_time"/>-->
                    <field name="area"/>
                    <field name="location"/>
                    <field name="state" widget="badge" decoration-info="state == '新建'" decoration-warning="state not in ('新建','已审核')" decoration-success="state == '已审核'"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="RepairApplicationForm">
            <field name="name">RepairApplication form</field>
            <field name="model">repair.application</field>
            <field name="arch" type="xml">
                <form duplicate="false">
                    <field name="create_uid" invisible="1"/>
                    <field name="workflow_look" invisible="1"/>
                    <header>
                        <field name='state'  widget='statusbar' statusbar_visible="新建,综合接口人,综合管理部负责人,核二院接口人,物业接口人,申请人,已审核"/>
                        <button name='action_confirm'  states='新建' string='提交' type='object' class='oe_highlight' attrs="{'invisible': ['|',('workflow_look','=',False)]}"
                           context="{'to_state': state}"/>
                        <button name='action_confirm' states='综合接口人' string='同意' type='object' class='oe_highlight'
                                attrs="{'invisible': ['|',('workflow_look','=',False)]}"
                            context="{'to_state': state}"/>
                        <button name='action_confirm' states='综合管理部负责人' string='同意' type='object' class='oe_highlight'
                                attrs="{'invisible': ['|',('workflow_look','=',False)]}"
                           context="{'to_state': state}"/>
                        <button name='action_confirm' states='核二院接口人' string='同意' type='object' class='oe_highlight'
                                attrs="{'invisible': ['|',('workflow_look','=',False)]}"
                            context="{'to_state': state}"/>
                        <button name='action_confirm' states='物业接口人' string='同意' type='object' class='oe_highlight'
                                attrs="{'invisible': ['|',('workflow_look','=',False)]}"
                            context="{'to_state': state}"/>
                        <button name='action_confirm' states='申请人' string='同意' type='object' class='oe_highlight'
                                attrs="{'invisible': ['|',('workflow_look','=',False)]}"
                            context="{'to_state': state}"/>
                        <button name='action_confirm_refuse' string='拒绝' type='object' class='oe_highlight'
                            context="{'to_state': state}"
                                attrs="{'invisible': ['|',('workflow_look','=',False), ('state','=', '新建')]}"/>
                        <button name='action_back' string='取回' type='object' class='oe_highlight'
                                attrs="{'invisible': ['!','&amp;', ('create_uid', '=', uid), ('state','in',['综合接口人'])]}" confirm="请是否取回!"/>
                    </header>
                    <sheet string="维修申请">
                        <sheet>
                            <widget name="web_ribbon"  attrs="{'invisible':[('state', '!=', '已审核')]}" title="已审核"/>
                            <h2>维修申请信息</h2>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <group>
                                    <field name="apply_user" readonly="1" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
                                    <field name="user_phone"/>
                                    <field name="area"/>
                                    <field name="location"/>
                                </group>
                                <group>
                                    <field name="user_dept" options="{'no_open':True,'no_create':True,'no_create_edit':True}"/>
    <!--                                <field name="expected_time" options="{'format':'YYYY年MM月DD日 HH时mm分'}"/>-->
    <!--                                <field name="format_year_test_date" widget="year_datepicker"/>-->
                                </group>
                            </group>
                            <group>
                                <field name="specification"/>
                            </group>
                        </sheet>
                        <sheet>
                            <field name="attachment_ids" attrs="{'readonly':[('state', '!=', '新建')]}" options="{'no_open':True}">
                                <tree string="附件列表" create="0" edit="0" limit="3">
    <!--                                <button name="btn_preview_file" type="object" icon="fa-eye"/>-->
    <!--                                <button name="btn_download_file" type="object" icon="fa-download"/>-->
                                    <field name="name" string="附件名称" style="width:85%" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field string='文件' name="datas" filename="name" required="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <button name="action_get_attachment_view"  icon="fa-paperclip" type="object" attrs="{'invisible':[('state','!=','新建')]}"  >
                                <field name="attachment_number" widget="statinfo" string="附件上传" attrs="{'invisible':[('state','!=','新建')]}" />
                            </button>
                            <notebook colspan="4">
                                <page string="审批记录">
                                    <field name="workflow_ids" readonly='1' options="{'no_open':True}">
                                        <tree string="审批情况" decoration-danger="state=='拒绝'">
                                            <field name="name" />
                                            <field name="refuse_to"/>
                                            <field name="accredit"/>
                                            <field name="user_id"/>
                                            <field name="end_date"/>
                                            <field name="note"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="RepairApplicationKanban">
            <field name="name">RepairApplication kanban</field>
            <field name="model">repair.application</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" create="false" default_order=" id desc">
                    <field name="name"/>
                    <field name="specification"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row mb4">
                                    <div class="col-6">
                                        <strong><span><t t-esc="record.name.value"/></span></strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <field name="state" widget="label_selection" options="{'classes': {'新建': 'info', '综合接口人':'warning', '综合管理部负责人':'warning', '核二院接口人':'warning', '物业接口人':'warning', '申请人':'warning', '已审核': 'success'}}"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <span class="float-right">
                                            <field name="specification"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="RepairApplicationSearch" model="ir.ui.view">
            <field name="model">repair.application</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <filter string="我的待办" name="daiban" context="{'do_type':'daiban'}" groups="base.user_admin"/>
                    <filter string="我的申请" name="shenqing" context="{'do_type':'shenqing'}" groups="base.user_admin"/>
                    <filter string="我的已办" name="yiban" context="{'do_type':'yiban'}" groups="base.user_admin"/>
                    <filter string="列表全部" name="all" context="{'do_type':'all'}" groups="base.user_admin"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_repair_application">
            <field name="name">维修申请</field>
            <field name="res_model">repair.application</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'do_type':'daiban', 'all_button_show_group': 'hd_repair.repair_application_manger', 'search_default_daiban':1}</field>
        </record>
    </data>
</odoo>

